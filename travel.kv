<TravelSimulator>:
    orientation: 'vertical'
    spacing: 20
    padding: 30

    Label:
        id: distance_label
        text: "Оставшееся расстояние: - км"
        font_size: '30sp'
        size_hint_y: None
        height: self.texture_size[1]

    Label:
        id: time_label
        text: "Оставшееся время: - ч"
        font_size: '30sp'
        size_hint_y: None
        height: self.texture_size[1]

    TextInput:
        id: distance_input
        hint_text: "Введите расстояние (км)"
        font_size: '24sp'
        multiline: False
        input_filter: 'float'
        size_hint_y: None
        height: 80

    TextInput:
        id: speed_input
        hint_text: "Введите скорость (км/ч)"
        font_size: '24sp'
        multiline: False
        input_filter: 'float'
        size_hint_y: None
        height: 80

    Button:
        text: "Старт / Обновить скорость"
        font_size: '24sp'
        size_hint_y: None
        height: 80
        on_press:
            root.update_speed()
            root.start()
